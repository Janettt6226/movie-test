<div class="container">
  <h1>All movies</h1>

  <%= link_to "Add a movie", new_movie_path%>

  <% @movies.each do |movie| %>
    <h2><%= movie.title %></h2>
    <% if movie.image.nil? == "false" %>
      <img src=<%= movie.image %> alt="movie cover">
    <% else %>
      <img src="https://i.gifer.com/ZJuw.gif" alt="cat cover">
    <% end %>
    <h3>Released in: <%= movie.year %></h3>
    <p>Score: <%= movie.score.round(2) %>/10</p>
    <p>Rating: <%= movie.rating %>/5</p>
    <p>Genre: </p>
    <% movie.genres.each do |genre| %>
      <ul>
        <li><%= genre.name %></li>
      </ul>
    <% end %>
    <p>Actors: </p>
    <% movie.actors.each do |x| %>
      <%# <% x.actors.each do |actor|
        <ul>
          <li><%= x.name %></li>
          <li><%= x.name %></li>
        <%# </ul> %>
      <%# <% end %>
    <% end %>
    <%= link_to "Delete", movie_path(movie), data: {turbo_method: :delete, turbo_confirm: "Are you sure?" } %>
  <% end %>
</div>
